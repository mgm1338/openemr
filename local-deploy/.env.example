# OpenEMR Local Development Environment Variables
# Copy this file to .env and customize the values

# Database Configuration
MYSQL_ROOT_PASSWORD=openemr_root_pass
MYSQL_DATABASE=openemr
MYSQL_USER=openemr
MYSQL_PASSWORD=openemr_user_pass

# OpenEMR Admin Configuration
OE_USER=admin
OE_PASS=admin_password

# Optional: Custom ports (uncomment to override defaults)
# HTTP_PORT=8080
# HTTPS_PORT=8443
# PHPMYADMIN_PORT=8081
# MYSQL_PORT=3307

# Development Options
EASY_DEV_MODE=yes
EASY_DEV_MODE_NEW=yes
DEVELOPER_TOOLS=yes
XDEBUG_ON=1
XDEBUG_PROFILER_ON=1